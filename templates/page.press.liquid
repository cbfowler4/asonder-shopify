  .press-section .rte {
    text-align: center;
  }

  .press-body-top, .press-body-top .press-body-header {
    color: white;
    z-index: 5;
  }

  .press-body-top-bk {
    background: #513687;
    padding: 0px 3000px;
    margin: 0px -3000px;
    top: 0;
    bottom: 0;
    position: absolute;
    z-index: 1;
  }

  .press-body-top, .press-body-bottom {
    position: relative;
    padding: 30px;
    margin: 60px;
