    flex-direction: column;
    align-items: center;
  }

  .press-link img {
    margin: 12px 10px;
    border-radius: 50%;
    height: 130px;
    width: 130px;
    box-shadow: 0px 0px 3px 2px rgba(0,0,0,.2);
    transition-duration: .25s;

  }

  .press-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 30px;
    z-index: 5;
